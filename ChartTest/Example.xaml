<Window x:Class="ChartTest.Example"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:chart="clr-namespace:WPFChart;assembly=WPFChart"
        Title="Example" Height="300" Width="300"
        WindowState="Maximized"
        Loaded="Window_Loaded">
    <Grid>
        <chart:Chart x:Name="chOlympic" Margin="20" AxesValuesVisibility="Both" Caption="Olympic medals" ChartStyle="Columns" AutoAdjust="False" MaxY="250" SectionsY="10" ShowSecondaryYLines="True" ShowSecondaryXLines="True" YAxisText="Medals" XAxisText="Countries"/>
    </Grid>
</Window>
