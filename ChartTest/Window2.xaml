<Window x:Class="ChartTest.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ChartTest"
        Title="Window2" Height="300" Width="300">
    <Window.Resources>
        <local:HorizontalValuesConverter x:Key="HConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" BorderBrush="Black" BorderThickness="1"/>
        <Path Grid.Row="1" Fill="Black" Data="{Binding ActualWidth, Converter={StaticResource HConverter}, RelativeSource={RelativeSource Self}}"/>
    </Grid>
</Window>
